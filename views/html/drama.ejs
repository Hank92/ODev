              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                
                  <% for(var i = 0; i < postModels.length ; i++  ) { %>
                  <tbody>
                          <tr>
                          
                            <td><a href ="/drama/<%= postModels[i].id %>"><font size ="5" color ="#FFFFFF"> <%= postModels[i].title %></font></a></td>
                          </tr>
                        </tbody>
                  <% }%>

                  <% if (postModels.length < 1) { %> 
          <div class ="text-center">
          <h3><font size ="8" color ="#181818"> "<%= searchTitle %>"<font> <font size ="6" color ="#181818">검색 결과가 없습니다.. sorry<font></h3>
          </div>
       <% } %> 

                </table>
            
              </div>
           <div class="panel-footer">
                <div class="row">
                  <div class="col col-xs-4">
                  </div>
                  <div class="col col-xs-8">
                                 <% if (pageCount > 1) { %>  
<ul class="pagination">  
  <% if (currentPage > 1) { %>
      <li><a href="/drama/?page=1">&laquo;</a></li>
  <% } %>
  <% var i = 1;
  if (currentPage > 5) {
  i = +currentPage - 4;
  } %>
  <% if (i !== 1) { %>
      <li class="disabled"><a href="#">...</a></li>
  <% } %>
  <% for (i; i<=pageCount; i++) { %>
    <% if (currentPage == i) { %>
        <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
    <% } else { %>
        <li><a href="/drama/?page=<%= i %>"><%= i %></a></li>
    <% } %>
    <% if (i == (currentPage + 4)) { %>
        <li class="disabled"><a href="#">...</a></li>
    <% break; } %>
  <% } %>
  <% if (currentPage != pageCount) { %>
      <li><a href="/drama/?page=<%= pageCount %>">&raquo;</a></li>
  <% } %>
</ul>  
<% } %> 
                  </div>
                </div>
